page{
  font-family: PingFangSC-Regular, sans-serif;
}
.mask{
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9998;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .3);
}
.modal{
  box-sizing: border-box;
  width: 566rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 20rpx;
  background-color: white;
  border-radius: 10rpx;
}
.modal .title{
  margin-top: 30rpx;
  text-align: center;
  font-family: PingFangSC-Medium, sans-serif;
  font-size: 36rpx;
  color: #333333;
}
.modal .content{
  display: inline-block;
  width: 100%;
  margin-top: 30rpx;
  line-height: 56rpx;
  font-size: 30rpx;
  color: #333333;
  text-align: center;
}
.modal .btn-box{
  display: inline-flex;
  display: -webkit-inline-flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
  margin-top: 58rpx;
  font-size: 30rpx;
  border-top: 1rpx solid #F5F5F5;
}
.modal .btn-box .btn-wrapper{
  position: relative;
  width: 50%;
  height: 58rpx;
  line-height: 58rpx;
  text-align: center;
}
.modal .btn-box .btn-wrapper:nth-of-type(2){
  border-left: 1rpx solid #F5F5F5;
}
.modal .btn-box .cancel{
  color: #ABABAB;
}
.modal .btn-box .submit{
  color: #FFAE00;
}

.login-btn{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  bottom: 0;
  opacity: 0;
}