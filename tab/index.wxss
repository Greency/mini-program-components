.c-tab-box {
  display: flex;
  display: -webkit-flex;
  justify-content: space-around;
  width: 100%;
  height: 100%;
  font-size: 26rpx;
  background-color: white;
}

.c-tab-box .c-tab {
  box-sizing: border-box;
  height: 100%;
  color: #333333;
  text-align: center;
  border-bottom: 4rpx solid white;
}

.c-tab-box .c-tab-active {
  border-bottom: 4rpx solid #ffe600;
}